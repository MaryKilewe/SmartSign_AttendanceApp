<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/mountain"
    tools:context="com.example.marys.smartsign.FirstPage"
    tools:showIn="@layout/activity_manage_students">







    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage "
        tools:text="Manage Students"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="90dp"

        />





    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View students"
        android:onClick="nextPage1"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="200dp"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textColor"
        android:background="@drawable/buttondesign"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add or remove"
        android:onClick="nextPage2"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="600dp"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textColor"
        android:background="@drawable/buttondesign"
        />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="nextPage2"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="600dp"
        android:layout_marginBottom="10dip"
        android:padding="20dp"
        android:textColor="@color/textColor"
        android:background="@drawable/buttondesign"

        />



</LinearLayout>

